@model Athene.Inventory.Web.Areas.Admin.Models.DataImportDto
@{
    Layout = "_Layout";
}
<h4>@Localizer["Data Import"]</h4>
<form asp-action="Upload" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="SourceType"></label>
        <select asp-for="SourceType" asp-items="Model.SourceTypes" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="DataType"></label>
        <select asp-for="DataType" asp-items="Model.DataTypes" class="form-control"></select>
    </div>
    <div class="form-group">
    <div>
        <label asp-for="UploadFile"></label>
        <input type="file" asp-for="UploadFile" accept=".txt,.csv" />
    </div>
    </div>
    <button class="btn btn-primary">@Localizer["Upload"]</button>
</form>