@model IEnumerable<PublisherViewModel>

@{
    Layout = "_Layout";
}

<div class="row">
	<div class="col-md-6">
		<h3>@Localizer["Publisher"]</h3>
	</div>
	<div class="col-md-6">
		<partial name="_MessageContainer">
	</div>
</div>

<p>
    <a class="btn btn-default" asp-controller="Publisher" asp-action="Create">
        <span class="glyphicon glyphicon-plus"></span> @Localizer["Add"]
    </a>
</p>
@if (Model.Count() == 0) {
    <h3>Keine Herausgeber angelegt</h3>
}
else
{
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
        </tr>
        @foreach(var publisher in Model)
        {
        <tr>
            <td>@Html.DisplayFor(model => publisher.Id)</td>
            <td>@Html.DisplayFor(model => publisher.Name)</td>
        </tr>
        }
    </table>
}
