@model IEnumerable<AuthorViewModel>

@{
    Layout = "_Layout";
}

<div class="row">
	<div class="col-md-12">
		<h3>Autoren</h3>
	</div>
</div>
<p>
    <a class="btn btn-default" asp-controller="Authors" asp-action="Create">
        <span class="glyphicon glyphicon-plus"></span> Hinzuf√ºgen
    </a>
</p>
@if (Model.Count() == 0) {
    <h3>Keine Autoren angelegt</h3>
}
else
{
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Info)</th>
        </tr>
        @foreach(var author in Model)
        {
        <tr>
            <td>@Html.DisplayFor(model => author.Id)</td>
            <td>@Html.DisplayFor(model => author.FullName)</td>
            <td>@Html.DisplayFor(model => author.Info)</td>
        </tr>
        }
    </table>
}
