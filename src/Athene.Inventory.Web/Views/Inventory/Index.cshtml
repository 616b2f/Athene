@model SearchResultViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = @Localizer["Search"];
}

<div class="row">
	<div class="col-md-6">
		<h3>@Localizer["Search"]</h3>
	</div>
	<div class="col-md-6">
		@Html.Partial("_MessageContainer")
	</div>
</div>

@if (Model.Items.Count() == 0)
{	
	<div class="text-center">
		<br>
		<br>
		<h3><small>@Localizer["Nothing found"]</small></h3>
	</div>
}
else
{
    @Localizer["{0} match", Model.FoundQuantity]<br/>
    @foreach (var article in Model.Items)
    {
		@if (article is Book)
		{
			@Html.Partial("_BookPreview", article as Book)
		}
    }
}