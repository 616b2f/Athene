@model IEnumerable<Category>

@{
    Layout = "_Layout";
}

<div class="row">
	<div class="col-md-6">
		<h3>Kategorien</h3>
	</div>
	<div class="col-md-6">
		@Html.Partial("_MessageContainer")
	</div>
</div>
<p>
    <a class="btn btn-default" asp-controller="Categories" asp-action="Create">
        <span class="glyphicon glyphicon-plus"></span> Hinzuf√ºgen
    </a>
</p>
@if (Model.Count() == 0) {
    <h3>Keine Kategorien angelegt</h3>
}
else
{
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
        </tr>
        @foreach(var category in Model)
        {
        <tr>
            <td>@Html.DisplayFor(model => category.Id)</td>
            <td>@Html.DisplayFor(model => category.Name)</td>
        </tr>
        }
    </table>
}
