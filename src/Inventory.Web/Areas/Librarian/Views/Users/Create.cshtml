@model ApplicationUser
@{
    ViewBag.Title = "Schüler aufnehmen";
    Layout = "_Layout";
}

<h3>@ViewBag.Title</h3>
<form asp-controller="Users"
    asp-action="Create"
    class="form-horizontal">
      <div class="form-group">
          <label asp-for="Surname"></label>
          <input class="form-control" asp-for="Surname"></label>
      </div>
      <div class="form-group">
          <label asp-for="Lastname"></label>
          <input class="form-control" asp-for="Lastname"></label>
      </div>
      <div class="form-group">
          <label asp-for="Birthsday"></label>
          <input class="form-control" asp-for="Birthsday"></label>
      </div>
      <button class="btn btn-primary">Hinzufügen</button>
</form>
