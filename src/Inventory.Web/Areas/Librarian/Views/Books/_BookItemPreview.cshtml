@model Book

<div class="panel panel-default panel-body">
    <label asp-for="Id"></label>
    @Model.Id<br/>
    <label asp-for="Title"></label>
    @Model.Title<br/>
    <label asp-for="Description"></label>
    <p>
        @Model.Description
    </p>
    <a class="btn btn-primary" asp-controller="Books" asp-action="Change" asp-route-id="@Model.Id">Bearbeiten</a>
    <a class="btn btn-primary" asp-controller="Books" asp-action="AddToStore" asp-route-bookId="@Model.Id">In Bibliothek aufnehmen</a>
</div>
